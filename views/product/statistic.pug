.statistic
    .statistic__head
        .statistic__icons
            a.statistic__icon.statistic__icon_window(href="javascript:void(0)")
                img(src='/images/product/window-icon-white.png', alt='window-icon')
            .statistic__icon.statistic__icon_hamburger.submenu-open
                img(src='/images/product/hamburger-white.svg', alt='hamburger')
        .statistic__title REHAU
        .statistic__subtitle BLITZ/NEW
    .statistic__shade
        .statistic__photos_1
            .statistic__img
                img(src='/images/product/window-empty.png', alt='window')
                ul.statistic__tooltips
                    each i in [1,2,3]
                        li.statistic__tooltip(class="statistic__tooltip_"+i)
                            .statistic__dot
                                .dot_middle
                                    .dot_inside
                            .statistic__tooltip-text
                                | Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
        .statistic__photos_2
            .statistic__gallery-overflow
                .statistic__gallery
                        ul.statistic__gallery-items
                            each i in [1,2,3,4]
                                li.statistic__gallery-item(class="statistic__gallery-item_"+i)
                                    //- img(class="statistic__gallery-window" src="/images/product/window_" + i + ".png", alt="WIndow " + i)
                        .statistic__gallery-window_base
                            img(src="/images/product/window_1.png", alt="WIndow 2")
            .statistic__arm
    .statistic__main
        ul.statistic__items
            li.statistic__item
                .statistic__circle.c100(class="p23")
                    span 23%
                    .slice
                        .bar
                        .fill
                .statistic__note Теплоизоляция
            li.statistic__item
                .statistic__circle.c100(class="p10")
                    span 10%
                    .slice
                        .bar
                        .fill
                .statistic__note Шумоизоляция
            li.statistic__item
                .statistic__circle.c100(class="p10")
                    span 10%
                    .slice
                        .bar
                        .fill
                .statistic__note Безопасность
            li.statistic__item
                .statistic__circle.c100(class="p10")
                    span 10%
                    .slice
                        .bar
                        .fill
                .statistic__note Эстетичность
            li.statistic__item
                .statistic__circle.c100(class="p10")
                    span 10%
                    .slice
                        .bar
                        .fill
                .statistic__note Надежность
            li.statistic__item
                .statistic__circle.c100(class="p10")
                    span 10%
                    .slice
                        .bar
                        .fill
                .statistic__note Экологичность
