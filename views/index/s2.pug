mixin list(list)
    if list
        ol
            each item in list
                li.s2-secondary-card
                    a(href=item.uri class={ 'more': item.uri === '#', 'disabled': item.dev })= item.title

                    +list(item.list)
.section.s2
    .fp_bg
        button.s2-menu MENU
        ul.s2-main-list
            each item in s2_menu
                li.s2-primary-card
                    button.card-close(aria-label='Закрыть')
                        svg(width='15px' height='15px')
                            use(xlink:href='#symbol--cross')
                    svg.card-icon(aria-hidden='true')
                        use(xlink:href=`#symbol--index-${item.ico}`)
                    p= item.title
        ol.s2-secondary-list
            each item in s2_menu
                li.s2-secondary-card
                    +list(item.list)
                    svg(aria-hidden='true')
                        use(xlink:href=`#symbol--index-${item.ico}`)
