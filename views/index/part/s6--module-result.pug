div(data-Module="module-result")
    i.material-icons(data-El="close") close
    
    calc-title(v-bind:title="title")
    
    nav.tabs-result
        span(data-El="tab-2", data-active="true")
            img(src="/images/index/s6/i-window.png", alt="")
            a(href="#") Оконные конструкции
        span(data-El="tab-1")
            img(src="/images/index/s6/i-balcony.png", alt="")
            a(href="#") Остекление балконов
    
    div(data-grid="inner-result-1")
        div(data-grid="inner-result-2")
            .scrollbar-outer.vertical
                figure(data-El="tabpanel-2", data-showed="true")
                    ins(hidden="true").empty Еще не добавлено
                    calc-selected-window(
                        v-for="(item, index) in selectedWindow",
                        v-bind:class="{ active: item.active }",
                        :key="index",
                        :index="index",
                        :id="item.id",
                        :title="item.title",
                        :price="item.price"                        
                    )
